<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MCOCSrv.Resources.Popups.AreYouSurePopup"
             IsEnabled="False"
             IsVisible="False"
             InputTransparent="True">
    <Border WidthRequest="300" HeightRequest="150" Stroke="{StaticResource Primary}" BackgroundColor="{StaticResource Gray900}" Padding="20">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10"/>
        </Border.StrokeShape>
    <VerticalStackLayout Spacing="30" HorizontalOptions="Center" VerticalOptions="Fill">
        <Label 
            Text="Are you sure?"
            Style="{StaticResource TitleHeadLine}"
            FontSize="24"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
            <Grid ColumnDefinitions="*,*,*">
                <Button x:Name="Cancel_button" Grid.Column ="0" Style="{StaticResource CancelButton}" Text="No" Clicked="Cancel_Button_Clicked"/>
                <Button x:Name="Confirm_button"  Grid.Column ="2" Style="{StaticResource AddNewButton}" Text="Yes" Clicked="Confirm_Button_Clicked"/>
            </Grid>
    </VerticalStackLayout>
    </Border>
</ContentView>
