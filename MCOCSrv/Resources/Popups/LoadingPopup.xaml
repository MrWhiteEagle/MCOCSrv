<?xml version="1.0" encoding="utf-8" ?>
<local:PopupBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MCOCSrv.Resources.Popups"
             x:Class="MCOCSrv.Resources.Popups.LoadingPopup"
             IsEnabled="False"
             InputTransparent="True"
             IsVisible="False"
             Loaded="Loaded"
             Unloaded="Unloaded">
    <Grid Style="{StaticResource PopupOverlay}">
        <Border Style="{StaticResource PopupBorder}">
            <VerticalStackLayout>
            <Label Text="Fetching server file sources..." Style="{StaticResource TitleHeadLine}" FontSize="20"/>
            <ActivityIndicator IsRunning="True" Color="{StaticResource Primary}" VerticalOptions="Center"/>
            <Label Text="Please wait...."/>
            <Border Stroke="{StaticResource Primary}">
                <ScrollView x:Name="PopupFetchOutputField" HeightRequest="200">
                    <Label x:Name="PopupFetchOutput" Text=""/>
                </ScrollView>
            </Border>
        </VerticalStackLayout>
        </Border>
    </Grid>
</local:PopupBase>
