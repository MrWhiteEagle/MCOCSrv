<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MCOCSrv.Resources.Popups.LoadingPopup"
             IsVisible="False"
             HorizontalOptions="Center"
             VerticalOptions="Center">
    <Border Stroke="{StaticResource Primary}" HeightRequest="450" WidthRequest="450" BackgroundColor="{StaticResource Gray900}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10"/>
        </Border.StrokeShape>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator IsRunning="True"/>
            <Label Text="Fetching file sources." Style="{StaticResource SubHeadline}"/>
            <Label Text="Please wait...."/>
        </VerticalStackLayout>
    </Border>
</ContentView>
