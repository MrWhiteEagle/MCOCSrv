<?xml version="1.0" encoding="utf-8" ?>
<popups:PopupBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popups="clr-namespace:MCOCSrv.Resources.Popups"
             x:Class="MCOCSrv.Resources.Popups.PlayerOpListPopup"
             IsVisible="False"
             InputTransparent="True"
             VerticalOptions="Center"
             HorizontalOptions="Center">
    <Grid Style="{StaticResource PopupOverlay}">
        <Border MinimumWidthRequest="500" Style="{StaticResource PopupBorder}">
            <VerticalStackLayout Spacing="10">
                <Label Text="Player List"
                   Style="{StaticResource TitleHeadLine}"/>
                <ScrollView HeightRequest="400">
                    <VerticalStackLayout x:Name="PlayerList" BindableLayout.ItemsSource="{Binding OppedPlayers}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" BackgroundColor="{StaticResource Gray950}" ColumnSpacing="5">
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" Style="{StaticResource SettingsData}"/>
                                    <Label Grid.Row="1" Grid.Column="0" Text="{Binding UUID, StringFormat='UUID - {0}'}" Style="{StaticResource SettingsData}"/>
                                    <Button x:Name="DeopButton" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Text="Deop" Clicked="DeopPlayerRequest"/>
                                </Grid>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </ScrollView>
                <Button Text="Close" Style="{StaticResource CancelButton}" WidthRequest="100" Clicked="OnClose"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</popups:PopupBase>
