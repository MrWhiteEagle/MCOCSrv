<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MCOCSrv.Resources.Models"
             x:Class="MCOCSrv.Resources.Content.ConsoleActionButton">

    <VerticalStackLayout>
        <AbsoluteLayout x:Name="ButtonBody" HeightRequest="75" Padding="10,0" ToolTipProperties.Text="Restore Backup" HorizontalOptions="Fill">
            <AbsoluteLayout.GestureRecognizers>
                <TapGestureRecognizer x:Name="ButtonBodyRecognizer"/>
            </AbsoluteLayout.GestureRecognizers>
            <Image x:Name="ActionButtonImage" AbsoluteLayout.LayoutBounds="0.375,0.5,0.2,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="Center" Aspect="AspectFit"/>
            <Label x:Name="ActionButtonText" AbsoluteLayout.LayoutBounds="0,0.5,0.8,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="End" FontFamily="RobotoBold" FontSize="16" VerticalOptions="Center" Opacity="0"/>
        </AbsoluteLayout>
        <BoxView Margin="10,0" HeightRequest="1" HorizontalOptions="Fill" BackgroundColor="{StaticResource BackgroundLight}"/>
    </VerticalStackLayout>
</ContentView>
