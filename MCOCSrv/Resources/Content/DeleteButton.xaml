<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MCOCSrv.Resources.Content.DeleteButton">
    <Border BackgroundColor="{StaticResource Transparent}" Stroke="Red" HeightRequest="40" WidthRequest="40" Padding="5">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5"/>
        </Border.StrokeShape>
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="Delete_Button_Clicked"/>
        </Border.GestureRecognizers>
        <Image Source="delete_icon.png"/>
    </Border>
</ContentView>
